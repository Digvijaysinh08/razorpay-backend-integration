{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./build",
        "module": "CommonJS",
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "types": ["node", "express"],
        "strict": true,
        "pretty": true,
        "allowJs": true,
        "sourceMap": true,
        "composite": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUncheckedIndexedAccess": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,

        "paths": {
            "@root/*": ["."],
            "@models": ["./common/models"],
            "@models/*": ["./common/models/*"],
            "@schemas": ["./common/schemas"],
            "@schemas/*": ["./common/schemas/*"],
            "@enums": ["./common/enums"],
            "@enums/*": ["./common/enums/*"],
            "@types": ["./common/types/index"],
            "@types/*": ["./common/types/*"],
            "@common": ["./common/index"],
            "@common/*": ["./common/*"]
        },

        "typeRoots": ["common/custom-definitions", "./node_modules/@types", "common/types"]
    },

    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },

    "include": ["common/custom-definitions/*", "common/**/*", "src/**/*"],

    "exclude": ["node_modules", "build", "**/*.test.ts", "**/*.spec.ts"]
}
